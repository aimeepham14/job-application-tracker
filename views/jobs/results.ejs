
 <div class="container d-flex justify-content-center mt-50 mb-50">
  <div class="card">
  <div class="card-header header-elements-inline">
    <h6 class="card-title p-3 mb-2 bg-warning text-dark">Search Results:</h6>
    <div class="header-elements">
      <div class="list-icons mb-2">
                <a class="fa fa-close" data-action="collapse" data-abc="true"></a>

              </div>
            </div>
          </div>

  <div class="card-body pb-0">
    <div class="row">
      <div class="col-xl-6">
        <div class="media flex-column flex-sm-row mt-0 mb-3">
              <div class="mr-sm-3 mb-2 mb-sm-0">
          </div>

              <div class="media-body">
                <ul class="list-group">
                  <% jobs.forEach(job => { %>
            <h6 class="media-title fw-bold p-3 mb-2 bg-info text-white"><%= job.name %></h6>
                      <ul class="list-inline list-inline-dotted text-muted mb-2">
                        <li class="list-inline-item"><a href = '/jobs/info/<%= job.id %>'>More details</a></li>
                      </ul>
                      Location: <%= job.locations[0].name %>
            <% }) %>
          </ul>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
</div>