                    <span><%= job.name %></span>
                    <div class="d-flex align-items-center time-text">
                    <!-- <small>Marketing</small>
                    <span class="dots"></span>
                    <small>viewed Just now</small>
                    <span class="dots"></span>
                    <small>Edited 15 minutes ago</small> --> 
                        <p><%= job.locations[0].name %></p>
                    <a href = '/jobs/info/<%= job.id %>'>More details</a>
                
                
                        <% }) %>
                  </div>
                    </ul>
                </div>
                

              </div>
              
            </div>
            
          </div>
          
        </div>

    </div>
    

  </div>
    

