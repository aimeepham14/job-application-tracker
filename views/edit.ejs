
<section style="background-image: url('https://i.imgur.com/99e4zlb.jpg'); background-repeat: no-repeat; background-size:cover; background-attachment: fixed;">
    <div class="container my-5 py-5">
      <div class="row d-flex justify-content-center">
        <div class="col-md-12 col-lg-10">
          <div class="card text-dark">
            <div class="card-body p-4">
              <h2 class="mb-0">Edit Comment</h2>  
              <div class="d-flex flex-start">
                <div>
                  <div class="d-flex align-items-center mb-3">
                  </div>
                  <p class="mb-0">
                    <div>
                        <form method="POST", action='/job-notes/<%= note.id %>/?_method=PUT'>
                            <div>
                                <label>Notes</label>
                                <input type="text" name="note" value="<%= note.note %>" placeholder="Add a note"> 
                            </div>
                            <div>
                                <label>Date</label>
                                <input type="date" name="date" 
                                value="<%= note.date %>" required>
                            </div>
                            <div>
                                <input type="submit">
                                
                            </div>
                        </form>
                    </div>
                    </p>
                </div>

              </div>
            </div>  
          </div>
        </div>
      </div>
    </div>
  </section>